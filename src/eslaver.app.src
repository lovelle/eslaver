{application, eslaver,
 [{vsn, "1.0.0"},
  {description, "Erlang slave redis replication client/server"},
  {applications, [stdlib, kernel]},
  {modules, [eslaver]},
  {registered, [eslaver, eslaver_sup, eslaver_server]},
  {mod, {eslaver, []}},
  {env, [
    {master, [
        {node, "nodeA"},
        {host, "127.0.0.1"},
        {port, 6379}
    ]},
    {dbfilename, "/tmp/master/dump.rdb"},
    {rdbcompression, yes},
    {rdbchecksum, yes}
  ]}
 ]}.
